{
  "name": "@c-p-b/cc-hooks",
  "version": "0.1.6",
  "description": "A universal, stable, and user-friendly hook management system for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "cc-hooks": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18.0.0 <23.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "pretest": "npm run build",
    "test": "jest --maxWorkers=50%",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "dev": "tsc --watch"
  },
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "automation",
    "cli",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/c-p-b/cc-hooks"
  },
  "bugs": {
    "url": "https://github.com/c-p-b/cc-hooks/issues"
  },
  "homepage": "https://github.com/c-p-b/cc-hooks#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "conventional-commits-parser": "^6.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
