{
  "name": "python-lint",
  "description": "Run ruff check on Python files",
  "command": ["ruff", "check", "."],
  "events": ["PostToolUse"],
  "outputFormat": "text",
  "exitCodeMap": {
    "0": "success",
    "1": "non-blocking-error",
    "default": "non-blocking-error"
  },
  "message": "Ruff found linting issues in your Python code",
  "fixInstructions": "Run 'ruff check --fix .' to auto-fix issues",
  "timeout": 20
}